{
	    "Version": "2012-10-17",
	        "Statement": [
			        {
					            "Effect": "Allow",
						                "Action": [
									                "lambda:InvokeFunction",
											                "s3:GetObject",
													                "s3:ListBucket"
															            ],
																                "Resource": [
																			                "arn:aws:lambda:<region>:<account-id>:function:<function-name>",
																					                "arn:aws:s3:::<bucket-name>"
																							            ]
																								            }
																									        ]
}
